<div id="fondo" class="showDelay mt-4" stylea="padding: 10px; border:2px black solid">
    <div class="container">
        <div class="">
            <div class="col-12 col-md-4  mx-auto" stylea="min-width:400px max-width:400px;">
                <div class="card text-white ">
                    <div class="card-header ">Registro</div>
                    <div id="datosModeloCard" class="card-body datosModeloBody">
                        <form id="formulario" class="formDatosPlaca" action="/register" method="post">
                            <div class="form-group">
                                <label class="form-label text-success" for="Usuario">Nuevo usuario:</label>
                                <div class=" input-group">
                                    <input type="text" id="username" class="form-control form-input" name="username" placeholder="Usuario" 
                                        minlength="1" maxlength="15" style="width: auto" autocomplete="current-username">
                                </div>
                                <div class="invalid-feedback">Usuario incorrecto!</div>
                            </div>

                            <div class="form-group">
                                <label class="form-label mt-3 text-success" for="Contraseña">Nueva contraseña:</label>
                                <div class=" input-group">
                                    <input type="password" id="password1" class="form-control form-input" name="password" placeholder="Contraseña" 
                                            minlength="1" maxlength="15" style="width: auto" autocomplete="current-password">
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <div class=" input-group">
                                    <input type="password" id="password2" class="form-control form-input" name="password2" placeholder="Repita la contraseña" 
                                            minlength="1" maxlength="15" style="width: auto" autocomplete="current-password">
                                </div>
                                <div class="invalid-feedback">Contraseñas no coinciden!</div>
                            </div>

                            <div class="form-group mt-4" style="text-align: center;">
                                <button class="btn btn-success btnHover" style="width:80%" id="btn-Sesion">Registrar</button>
                            </div>
                        </form>
                            
                        
                    </div>
            
                </div>
            </div>

        </div>
    
